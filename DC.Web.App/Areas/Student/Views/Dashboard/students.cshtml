                                }
                                else {
                                    tdclass = "td-inactive"
                                    currentstatus = '&nbsp;<button data-id="' + this.Id + '"  data-title="' + this.UserName + '" title="Currennt status is In-Active click to Active." type="button" class="jsLoading jsActiveInactive btn btn-outline-info text-success btn-sm"><i class="fa fa-close"></i></button>'
