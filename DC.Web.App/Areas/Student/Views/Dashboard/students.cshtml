                var page = $.trim($("#page").val());
                var currentRow = $.trim($("#currentRow").val());
                if (RoleId == "") {
                    $("#tblData").html('<tr><td class="tetx-left h3">Data not found.</td></tr>');
                    RemoveLoader();
                    return;
                }
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Gets", "school_student", new {area=""})',
                    data: { RoleId: RoleId, SchoolId: SchoolId, maxRows: maxRows, page: page, currentRow: currentRow},
                    dataType: "json",
                    success: function (data) {
                        var rowdata = '';
                        if (data.StatusCode == 200) {
                            var currentstatus = "";
