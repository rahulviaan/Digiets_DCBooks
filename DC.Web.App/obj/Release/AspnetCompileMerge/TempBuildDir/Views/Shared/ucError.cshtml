@model  DC.Web.App.Models.Error

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 text-center">
        <div class="col-lg-12   text-danger" style="height:400px; overflow-y:auto;background:#fff;padding:15px;border-radius:12px ">
            <i class="fa fa-exclamation-triangle fa-5x" aria-hidden="true"></i>
            <hr />
            <h5>@Model.Message</h5>
            <hr />
        </div>
    </div>
</div>
<script>
    $(function () {

        var title = $(".modal-title");
        var header = $(".modal-header");
        var html = '<h4 class="modal-title">' + title[1].innerHTML + '</h4> <button type="button" class="bootbox-close-button close" onclick=" bootbox.hideAll();" aria-hidden="true">×</button>';
        $(header[1]).html(html);

    });

</script>

