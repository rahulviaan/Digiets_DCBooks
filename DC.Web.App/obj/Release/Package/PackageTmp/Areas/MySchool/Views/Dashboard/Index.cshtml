@model DC.SchoolModel
@{
    ViewBag.Title =  Model.Title + "" + Model.SchoolCode;

}
<ol class="breadcrumb" id="olBredcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action(Model.SchoolCode,"school_admin",new {area="" })">Home</a>
    </li>
    <li class="breadcrumb-item active "> Dashboard </li>
</ol>
<div class="col-md-8 col-lg-offset-2 ">
    <table class="table table-bordered table-responsive">
        <tr>
            <th width="29%"></th>
            <th width="1%"></th>
            <td width="79%"></td>
        </tr>
        <tr>
            <th colspan="3" class="text-center">
                <img style="max-height: 100px;   " onerror="SetImage(this,'/images/0image.jpeg')" id="imgFileCoverImage" src="/Attatchments/@Model.Logo" class="jsImg img-thumbnail" />

            </th>
        </tr>
        <tr>
            
            <td colspan="3" class="text-center"> <h3>@Html.DisplayFor(model => model.vTitle)</h3></td>
        </tr>

        <tr>
            <th>  @Html.Label("Contact Detail")</th>
            <th>:</th>
            <td>
                @{

                    var cont = !string.IsNullOrEmpty(Model.ContactNo) ? Model.ContactNo : "";
                    cont = !string.IsNullOrEmpty(Model.AlterNateContactNo) ? cont + " / " + Model.AlterNateContactNo : "";
                    cont = "Mobile No: " + cont;
                    var email = !string.IsNullOrEmpty(Model.EmailId) ? ", Email: " + Model.EmailId : "";
                    var add = "Address: " + Model.AddressLine1 + " " + Model.AddressLine2 + " " + Model.AddressLine3;
                    var pin = !string.IsNullOrEmpty(Model.Pincode) ? ", Pincode: " + Model.Pincode : "";
                    var city = !string.IsNullOrEmpty(Model.City) ? ", City: " + Model.City : "";
                    var state = !string.IsNullOrEmpty(Model.State) ? ", State: " + Model.State : "";

                } @cont @email<br />
                @add @pin @city @state

            </td>
        </tr>

        <tr>
            <th>@Html.LabelFor(m => m.SchoolCode)</th>
            <th>:</th>
            <td>@Html.DisplayFor(m => m.SchoolCode)  </td>
        </tr>
        <tr>
            <th> @Html.Label("Credential")</th>
            <th> :</th>
            <td>
                Username: @Html.DisplayFor(m => m.UserName) / Password: @{
                    var pwd = Model.Password.Substring(0, 1);
                    foreach (var item in Model.Password.Substring(2, Model.Password.Length - 2).ToCharArray())
                    {
                        pwd = pwd + "*";
                    }
                    pwd += Model.Password.Substring(Model.Password.Length - 1, 1);

                } @pwd
            </td>
        </tr>
        <tr>
            <th> @Html.LabelFor(m => m.Principle)</th>
            <th>:</th>
            <td> @Html.DisplayFor(m => m.Principle) @Html.DisplayFor(m => m.PrincipleContactNo)</td>
        </tr>


        <tr>
            <th> @Html.LabelFor(m => m.Description)</th>
            <th>:</th>
            <td> @Html.Raw(Model.Description)</td>
        </tr>
    </table>
</div>
@section Scripts {
     
    <script src="~/Scripts/jquery.toaster.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/Common.js"></script>
    <script>
      
        $(function () {
            $(document).ajaxSend(function (event, xhr, settings) {
                $(".jsLoading").attr("disabled", "disabled");
            });
            $(document).ajaxComplete(function (event, xhr, settings) {
                $(".jsLoading").removeAttr("disabled");
            });
        });
    </script>
}
