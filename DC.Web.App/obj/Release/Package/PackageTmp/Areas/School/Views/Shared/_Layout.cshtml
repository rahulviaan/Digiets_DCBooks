<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/favicon.png" rel="icon">

    <title>
        @{
            var title = string.IsNullOrWhiteSpace(ViewBag.Title) ? "DC Press" : @ViewBag.Title;
        }

        @title
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Common.css" rel="stylesheet" />

</head>
<body onresize=' $(".body-content").css("min-height", $(window).height()-100)'>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="col-lg-12">
                <div class="navbar-header" style=" text-align:center">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index","Dashboard",new {area="CP"})">
                        <img class="img" style="height:60px;" src="~/images/logo.png" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid " style="margin-top:7px;">
        <div class="col-lg-12 body-content">
            @RenderBody()
            <footer class="navbar navbar-fixed-bottom text-center" style="background: #9ACE48;padding-top:20px;">
                <p>
                    &copy; @DateTime.Now.Year -    <span>
                        <strong><i>DC PRESSS</i></strong><img style="height:20px;" src="~/images/logotext.png" />
                    </span>
                </p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(".body-content").css("min-height", $(window).height() - 100)
        $(function () {


            $(document).on("click", ".jsAddLoader", function (e) {

                AddLoader();

            });
            window.addEventListener("beforeunload", function (e) {
                RemoveLoader();
            });
        });
    </script>
</body>
</html>
